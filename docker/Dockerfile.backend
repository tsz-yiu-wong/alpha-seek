FROM python:3.9-slim

# 设置工作目录为 /app，与项目结构保持一致
WORKDIR /app

# 复制 requirements.txt
COPY backend/requirements.txt .
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# 复制所有后端文件
COPY backend/ .

# 使用环境变量中的端口，提供默认值
ENV PORT=8080
EXPOSE ${PORT:-8080}
CMD ["sh", "-c", "uvicorn app:app --host 0.0.0.0 --port ${PORT:-8080} --http h11"]